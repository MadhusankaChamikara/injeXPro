<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back1"
    android:id="@+id/production_layout"
    tools:context=".ProductionFragment">

    <!-- Arranges child elements in a vertical stack for the app's home screen. -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Title Card -->
        <!-- A card layout used to display a section of information, such as machine status. -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">

            <!-- Arranges child elements in a vertical stack for the app's home screen. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="InjeX Pro"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--TODO: Gif Animation -->
        <!-- Arranges child elements in a vertical stack for the app's home screen. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

            <!--TODO: Gif Animation -->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/loader1" />

            <!--TODO: Gif Animation -->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/loader2" />

            <!--TODO: Gif Animation -->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/loader3" />
        </LinearLayout>

        <!-- Production Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="-5dp"
                            android:layout_width="33dp"
                            android:layout_height="25dp"
                            android:src="@drawable/signal2" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Production Status"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="start"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/lastUpdatedText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="L O A D I N G . . ."
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:gravity="end"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!--TODO: Gif Animation -->
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/loading" />

                        <TextView
                            android:id="@+id/machineStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center"
                            android:text="Data Receiving..."
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center"
                            android:text=" |  "
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_marginLeft="-5dp"
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:src="@drawable/environmenttemperature" />

                        <TextView
                            android:id="@+id/environmentTempText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center"
                            android:text="00.0Â°C"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Scrollerview-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Mold Number Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/moldNumberCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/mold"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mold"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/red1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Number"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/red1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/moldNumberValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#0"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Operation State Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/operationStateCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/phases"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Operational"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/yellow1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/yellow1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/operationStateValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State 0"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Machine Uptime Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/machineUptimeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/uptime"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/blue1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uptime"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/blue1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/machineUptimeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00:00"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Product Count Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/productCountCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/count"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Production"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/grey1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Count"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/grey1"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/productCountValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000 parts"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Mold Heat Exchange -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/MoldheatExchangeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mold Heat Exchange"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textColor="@color/cool" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!--Inlet Temperature -->
                            <TextView
                                android:id="@+id/inletMoldTempValue"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="00.0Â°C"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="@color/cool" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/arrow1" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:src="@drawable/mouldbox" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/arrow2" />

                            <!--Outlet Temperature -->
                            <TextView
                                android:id="@+id/outletMoldTempValue"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="00.0Â°C"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="@color/warm" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Injector position and clamp positiom Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/positionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Injection Position"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="60dp"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clamp Position"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/injectionposition" />

                            <!--Hydraulic Flow -->
                            <TextView
                                android:id="@+id/injectorPositionValue"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="000.0 mm"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textColor="@color/black" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="65dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/mold3" />

                            <!--Hydraulic Pressure -->
                            <TextView
                                android:id="@+id/clampPositionValue"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="000.0 mm"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

