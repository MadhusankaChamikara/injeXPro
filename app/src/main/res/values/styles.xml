<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/black</item> <!-- Use a neutral color -->
    </style>

    <style name="Theme.App.Launch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_1</item>
    </style>

    <style name="Theme.YourApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Card customization -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <!-- Custom card style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="AppTheme." parent="Theme.MaterialComponents.Light.DarkActionBar">



    </style>

</resources>
